{
  "name": "mono",
  "version": "0.0.1",
  "devDependencies": {
    "@mono/ts-config": "workspace:*",
    "@biomejs/biome": "2.0.6",
    "lefthook": "^1.12.1",
    "turbo": "^2.5.4",
    "typescript": "catalog:",
    "ultracite": "5.0.32"
  },
  "engines": {
    "bun": ">=1.2.17"
  },
  "license": "MIT",
  "packageManager": "bun@1.2.17",
  "private": true,
  "scripts": {
    "dev:frontend": "turbo -F @mono/frontend dev",
    "dev:backend": "turbo -F @mono/backend dev",
    "dev:docs": "turbo -F @mono/docs dev",
    "dev": "turbo dev",
    "build": "turbo build",
    "preview": "turbo preview",
    "check-types": "turbo check-types",
    "lint": "biome lint --write --unsafe",
    "format": "biome format --write --unsafe",
    "check": "biome check --write --unsafe",
    "clean": "turbo clean && rm -rf .turbo",
    "reset": "bun run clean && bun install"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/configs/*"
    ],
    "catalog": {
      "@types/bun": "^1.2.17",
      "@types/node": "^24.0.10",
      "@types/react": "^19.1.8",
      "@types/react-dom": "^19.1.6",
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "typescript": "^5.8.3",
      "vite": "^7.0.0"
    }
  }
}
