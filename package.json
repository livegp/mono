{
  "name": "mono",
  "version": "0.0.1",
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@mono/ts-config": "workspace:*",
    "lefthook": "^2.0.16",
    "turbo": "^2.8.2",
    "typescript": "5.9.3",
    "ultracite": "7.1.3"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:frontend": "turbo -F @mono/frontend dev",
    "dev:backend": "turbo -F @mono/backend dev",
    "dev:docs": "turbo -F @mono/docs dev",
    "dev": "turbo dev",
    "build": "turbo build",
    "preview": "turbo preview",
    "check-types": "turbo check-types",
    "lint": "biome lint --write --unsafe",
    "format": "biome format --write --unsafe",
    "check": "biome check --write --unsafe",
    "clean": "turbo clean && rm -rf .turbo",
    "reset": "bun run clean && bun install"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/configs/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.8",
      "@types/node": "^25.2.0",
      "@types/react": "^19.2.10",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.4",
      "react-dom": "^19.2.4",
      "typescript": "^5.9.3",
      "vite": "^7.3.1"
    }
  }
}
