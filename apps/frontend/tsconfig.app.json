{
  "extends": "@mono/ts-config",
  "compilerOptions": {
    "tsBuildInfoFile": ".cache/tsconfig.app.tsbuildinfo",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["react", "react-dom"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    {
      "path": "../backend/"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".cache"]
}
